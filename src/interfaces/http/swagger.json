  "defaultResponses": {
    "DefaultProperties": {
      "properties": {
        "statusCode": {
          "type": "number"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "DefaultError": {
      "allOf": [
        {
          "$ref": "#/defaultResponses/DefaultProperties"
        },
        {
          "properties": {
            "error": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "example": "ValidationError"
                },
                "code": {
                  "type": "string",
                  "example": "VALIDATION_ERROR"
                },
                "details": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "message": {
                        "type": "string"
                      },
                      "path": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  },
  "components": {
    "schemas": {
      "NewProduct": {
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "image": {
            "type": "string",
            "format": "binary"
          },
          "categories": {
            "type": "array",
            "description": "UUID's of categories",
            "items": {
              "type": "string"
            }
          }
        },
        "type": "object"
      },
      "NewCategory": {
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "NewOffer": {
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "category",
              "product",
              "all"
            ]
          },
          "itemUUID": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "discount": {
            "type": "number"
          }
        }
      },
      "Product": {
        "properties": {
          "uuid": {
            "type": "string",
            "description": "Unique Identifier representing a product",
            "x-primary-key": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "image": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "Category": {
        "properties": {
          "uuid": {
            "type": "string",
            "x-primary-key": true
          },
          "name": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "Offer": {
        "properties": {
          "uuid": {
            "type": "string",
            "x-primary-key": true
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "category",
              "product",
              "all"
            ]
          },
          "itemUUID": {
